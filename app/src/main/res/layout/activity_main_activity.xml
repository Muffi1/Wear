<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity_Wear"
    android:weightSum="1"
    android:background="#B0BEC5"
    android:id="@+id/Background"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


    <Button
        android:layout_width="189dp"
        android:layout_height="wrap_content"
        android:text="Vyber mi me dnesni obleceni"
        android:id="@+id/button"
        android:background="#BBDEFB"
        android:layout_gravity="center_horizontal" />

            <TextView
                android:text="Ahoj, Vitam te!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textBMI"
                android:layout_marginTop="57dp"
                android:textStyle="bold" />

            <TextView
                android:text="Dnes je.."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textBarva"
                android:layout_marginTop="57dp"
                android:textStyle="bold" />

            <TextView android:text="Vypln prosim data..." android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:id="@+id/text"

        android:layout_marginTop="57dp"
        android:textStyle="bold"
        android:layout_gravity="center_vertical" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editVek"
        android:text="Vek" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editVyska"
        android:text="Vyska (cm)" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editVaha"
        android:text="Vaha (kg)" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editBoky"
        android:text="Boky (cm)" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/editPas"
        android:text="Pas (cm)" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editPrsa"
        android:text="Prsa (cm)" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menstruace"
        android:id="@+id/checkBox" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView6" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
